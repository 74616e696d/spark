{
  "name": "spark",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "clean": "lerna clean --yes && lerna exec -- rm -rf dist",
    "build": "lerna run build",
    "build:watch": "lerna run build && lerna watch -- lerna run build --since",
    "release": "lerna publish --yes --include-merged-tags --no-verify-access",
    "storybook:start": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "commit": "cz",
    "lint": "eslint --config .eslintrc.cjs . --ext .ts,.tsx,.js --fix",
    "prettier": "prettier --config .prettierrc.json --write \"{packages,src}/**/*.{ts,tsx}\"",
    "prettify": "npm run lint && npm run prettier",
    "node:check": "node bin/check-node-version.js"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@storybook/addon-actions": "^7.0.0-beta.43",
    "@storybook/addon-essentials": "^7.0.0-beta.43",
    "@storybook/addon-interactions": "^7.0.0-beta.43",
    "@storybook/addon-links": "^7.0.0-beta.43",
    "@storybook/blocks": "^7.0.0-beta.43",
    "@storybook/builder-vite": "^7.0.0-beta.43",
    "@storybook/react": "^7.0.0-beta.43",
    "@storybook/react-vite": "^7.0.0-beta.43",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "@vitejs/plugin-react": "^3.1.0",
    "babel-loader": "^8.3.0",
    "commitizen": "^4.3.0",
    "deepmerge": "^4.3.0",
    "lerna": "^6.4.1",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.6.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-standard": "5.0.0",
    "eslint-plugin-storybook": "^0.6.10",
    "prettier": "2.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0-beta.43",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-dts": "^1.7.2",
    "vite-tsconfig-paths": "^4.0.5",
    "rollup-plugin-terser": "^7.0.2"
  },
  "workspaces": [
    "packages/components/*"
  ]
}
